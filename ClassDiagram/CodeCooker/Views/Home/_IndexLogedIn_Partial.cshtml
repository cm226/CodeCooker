@model IEnumerable<Google.Apis.Sample.MVC.Models.FileModel>

@{
    ViewBag.Title = "Your Files";
}

<div class="container mainMody">
    <div class="row-fluid fileRow">
        <div class="span3"></div>
        <div class="span6"><button type="button" onclick="window.location.assign('@Href("~/ClassDiagram/Index")');" class="btn btn-default">New Diagram</button></div>
        <div class="span3"></div>
    </div>
    <div class="row-fluid fileHeader">
        <div class="span3"></div>
        <div class="span4"><h4>File</h4></div>
        <div class="span2"><h4>Date</h4></div>
        <div class="span3"></div>
    </div>
    @foreach (var file in Model)
    {
       <div class="row-fluid fileRow">
        <div class="span3"></div>
        <div class="span4"><a href='@Url.Content("~/ClassDiagram/Open?fileId="+@file.Id)')>@file.Title</a></div>
        <div class="span2">@file.CreatedDate</div>
        <div class="span3"></div>
      </div>

    }
</div>


