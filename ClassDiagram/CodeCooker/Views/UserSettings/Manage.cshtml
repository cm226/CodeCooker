@model CodeCooker.Models.UserProfile

@{
    ViewBag.Title = "Index";
}


<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>UserProfile</legend>

            @Html.HiddenFor(model => model.UserId)
            @Html.HiddenFor(model => model.UserName)

            <div class="editor-label">
                @Html.LabelFor(model => model.UserName)
            </div>
            <div class="editor-label">
                @Html.Display("UserName")
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Theme)
            </div>
            <div class="row">
                <div class="span4 editor-field">
                    @{var list = (SelectList)ViewBag.Themes;}
                    @Html.DropDownList("ThemeID", list)
                    @Html.ValidationMessageFor(model => model.Theme)
                </div>
                <div class="span4" id="ThemePreview">

                </div>
            </div>

            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@Scripts.Render("~/content/Forms")
<script type="text/javascript">
    Forms.selectContentSwap($('#ThemeID'), $('#ThemePreview'), ['<img src="/Content/img/DefaultTheem.png" />',
                                                                '<img src="/Content/img/DarkTheem.png" />']);
</script>